
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Cocktail name?</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
        <%= link_to 'back to list', cocktails_path %>
    </div>
  </div>
</div>
